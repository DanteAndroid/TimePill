<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetCorner</item>
    </style>

    <style name="BottomSheetCorner" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">?colorSecondary</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/bottom_menu_radius</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_menu_radius</item>
    </style>

    <style name="NavigationShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>